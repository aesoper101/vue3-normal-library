{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["types"],
    "types": ["vite/client"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
  "exclude": ["node_modules", "public", "favicon.ico"]
}
