{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": false,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "baseUrl": ".",
    "outDir": "dist",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "lib": ["esnext", "dom"],
    "typeRoots": ["types"],
    "types": ["vite/client"]
  },
  "include": ["packages/**/*.ts", "packages/**/*.d.ts", "packages/**/*.tsx", "packages/**/*.vue"],
  "exclude": ["node_modules", "public", "favicon.ico", "vite.config.ts"]
}
